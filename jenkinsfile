pipeline {
    agent any
        stages {
            stage('Remote SSH Execution') {
                steps {
                    script {
                        def remote = [
                            name: 'RemoteServer',
                            host: '192.168.224.134',
                            user: 'root',
                            password: 'Admin@123',
                            allowAnyHosts: true
                        ]
                        sshCommand remote: remote, command: "hostname && uptime"
                        
                    }
                }
                steps {
                    sshScript remote: remote, script: "patching.sh"
                }
            }
               
        
        }
}        
